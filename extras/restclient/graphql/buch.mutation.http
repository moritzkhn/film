### Vorhandenes Buch aktualisieren
POST {{graphQlUrl}}
Content-Type: application/json
Authorization: Bearer {{login.response.body.$.data.login.token}}
X-REQUEST-TYPE: GraphQL

mutation {
  update(
    id: "000000000000000000000003",
    version: 0,
    buch: {
      titel: "Geaendertgraphql",
      rating: 5,
      art: DRUCKAUSGABE,
      verlag: FOO_VERLAG,
      preis: 99.99,
      rabatt: 0.099,
      lieferbar: false,
      datum: "2021-01-02",
      isbn: "9780201633610",
      homepage: "https://acme.graphql",
      schlagwoerter: [
        "JAVASCRIPT",
        "TYPESCRIPT"
      ]
    }
  )
}

